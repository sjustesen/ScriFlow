{
	"name": "lit-analyzer",
	"version": "0.0.6",
	"description": "CLI that analyzes lit-html templates",
	"author": "runem",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/runem/ts-lit-plugin.git"
	},
	"keywords": [
		"lit-html",
		"lit",
		"lit-element",
		"javascript",
		"typescript",
		"web components",
		"web",
		"components",
		"tagged",
		"template"
	],
	"bin": {
		"lit-analyzer": "cli.js"
	},
	"scripts": {
		"prepare": "npm run build",
		"build": "rollup -c",
		"watch": "rollup -c --watch",
		"test": "ava",
		"test:update": "ava --update-snapshots",
		"test:watch": "ava --watch",
		"prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
		"lint": "tslint --project ./",
		"readme:build": "readme"
	},
	"main": "lib/index.cjs.js",
	"typings": "lib/index.cjs.d.ts",
	"files": [
		"/lib/",
		"cli.js"
	],
	"dependencies": {
		"chalk": "^2.4.2",
		"didyoumean2": "2.0.4",
		"parse5": "5.1.0",
		"ts-simple-type": "~0.3.3",
		"vscode-css-languageservice": "4.0.2-next.1",
		"vscode-html-languageservice": "2.1.12",
		"web-component-analyzer": "~0.1.2"
	},
	"devDependencies": {
		"@appnest/readme": "^1.0.21",
		"@types/node": "^10.12.24",
		"@wessberg/rollup-plugin-ts": "^1.1.52",
		"rollup-plugin-replace": "^2.1.0",
		"rollup-plugin-node-resolve": "^4.0.1",
		"husky": "^1.3.1",
		"prettier": "^1.16.4",
		"pretty-quick": "^1.10.0",
		"tslint": "^5.12.1",
		"tslint-language-service": "^0.9.9",
		"typescript": "^3.4.0"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": false,
		"printWidth": 200
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"contributors": [
		{
			"name": "Rune Mehlsen",
			"url": "https://twitter.com/runemehlsen",
			"img": "https://avatars2.githubusercontent.com/u/5372940?s=460&v=4"
		},
		{
			"name": "Andreas Mehlsen",
			"url": "https://twitter.com/andreasmehlsen",
			"img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
		},
		{
			"name": "You?",
			"img": "https://joeschmoe.io/api/v1/random",
			"url": "https://github.com/runem/ts-lit-plugin/blob/master/CONTRIBUTING.md"
		}
	]
}
